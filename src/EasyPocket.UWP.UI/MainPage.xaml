    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pocketsharp="using:PocketSharp.Models"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    NavigationCacheMode="Enabled"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

